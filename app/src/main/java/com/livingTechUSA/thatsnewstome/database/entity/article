package com.axxess.palliative.service.database.room

import android.content.Context
import androidx.room.Database
import androidx.room.Room
import androidx.room.RoomDatabase
import androidx.room.TypeConverters
import com.axxess.palliative.service.database.room.daos.*
import com.axxess.palliative.service.database.room.entities.*

@Database(
    entities = [AvailableActionsDB::class, BenefitPeriodDB::class,  CompletedTaskDB::class,
        ConversationDB::class, ConversationMessageDB::class, ConversationUserDB::class, ConversationsAndUsersAssociativeTable::class,
        HospiceEnumDB::class, ParentPermissionsDB::class, PermissionDB::class, PermissionDependencyDB::class,
        PermissionGroupDB::class, PermissionResourceDB::class, UserDB::class, UserProfileDB::class,
        VisitDB::class],
    version = 2,
    exportSchema = false
)
@TypeConverters(Converters::class)

abstract class PalliativeDatabase : RoomDatabase() {

    /**
     * Connects the database to the DAO.
     */
    abstract fun availableActionDao(): AvailableActionDao
    abstract fun benefitPeriodDao(): BenefitPeriodDao
    abstract fun completedTaskDao(): CompletedTaskDao
    abstract fun conversationDao(): ConversationDao
    abstract fun conversationUserDao(): ConversationUserDao
    abstract fun conversationMessageDao(): ConversationMessageDao
    abstract fun hospiceEnumDao(): HospiceEnumDao
    abstract fun parentPermissionDao(): ParentPermissionDao
    abstract fun permissionDao(): PermissionDao
    abstract fun permissionDependencyDao(): PermissionDependencyDao
    abstract fun permissionGroupDao(): PermissionGroupDao
    abstract fun permissionResourceDao(): PermissionResourceDao
    abstract fun userDao(): UserDao
    abstract fun userProfileDao(): UserProfileDao
    abstract fun visitDao(): VisitDao

    companion object {
        fun provideRoomDatabase(context: Context): PalliativeDatabase {
            var databaseInstance: PalliativeDatabase? = null

            return databaseInstance ?: synchronized(this) {
                val instance = Room.databaseBuilder(
                    context.applicationContext,
                    PalliativeDatabase::class.java,
                    Constants.DATABASE_NAME
                )
                    .fallbackToDestructiveMigration()
                    .build()
                databaseInstance = instance
                instance
            }
        }
    }
}

